{
  "name": "loxodonta",
  "version": "1.0.0",
  "description": "An implementation of the Mastodon/GNU Social protocols",
  "keywords": [
    "mastodon",
    "gnu social"
  ],
  "scripts": {
    "test": "tap test/*",
    "start": "micro -p ${PORT:=3000}",
    "dev": "micro-dev -p ${PORT:=3000} --ignore 'db/**'"
  },
  "author": "Aria Stewart <aredridel@dinhe.net>",
  "license": "ISC",
  "devDependencies": {
    "micro-dev": "^1.4.0",
    "tap": "^10.3.1"
  },
  "dependencies": {
    "activitystreams-xl": "^1.0.3",
    "body-parser": "^1.17.1",
    "burpl": "^1.4.1",
    "dotenv": "^4.0.0",
    "es6-promisify": "^5.0.0",
    "es6-promisify-all": "^0.1.0",
    "flakeid": "^0.1.0",
    "fs-router": "^0.4.0",
    "if-p": "^1.0.1",
    "internet-timestamp": "0.0.1",
    "level": "^2.0.1",
    "level-promise": "^2.1.1",
    "levelgraph": "^2.0.1",
    "levelgraph-jsonld": "^1.0.3",
    "ltx": "^2.7.1",
    "magic-signatures": "^1.0.4",
    "make-fetch-happen": "^2.4.1",
    "map-p": "^1.0.1",
    "micro-query": "^0.2.0",
    "mime-match": "^1.0.2",
    "parse-data-url": "^0.1.4",
    "replify": "^1.2.0",
    "scrypt": "^6.0.3",
    "stream-collector-p": "^1.0.1",
    "unix-listen": "^0.1.1",
    "xml-schema": "^2.2.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "valid-typeof": "error",
      "no-unused-vars": "error",
      "no-undef": "error"
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aredridel/loxodonta.git"
  },
  "bugs": {
    "url": "https://github.com/aredridel/loxodonta/issues"
  },
  "homepage": "https://github.com/aredridel/loxodonta#readme"
}
